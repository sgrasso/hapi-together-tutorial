{
  "name": "hapi_workshop",
  "version": "1.0.0",
  "description": "Hapi Tutorial Workshop",
  "main": "index.js",
  "scripts": {
    "test": "npm test",
    "start": "node .",
    "dev": "run-p watch-css watch-js watch-server",
    "build": "run-p build-js build-css",
    "build-js": "uglifyjs public/js/lib/*.js server/views/**/client.js -v -o public/js/main.min.js",
    "build-css": "cat public/css/font-awesome/css/font-awesome.css public/css/fontello/css/fontello.css public/css/lib/*.css public/css/styles.css | cleancss -o public/css/styles.min.css",
    "watch-server": "nodemon --ignore public/ --ignore 'server/views/**/client.js' -x npm start",
    "watch-js": "nodemon -e js,jade -w public/js/lib -w 'server/views/**/client.js' -x 'npm run build-js'",
    "watch-css": "nodemon -e css -w public/css/styles.css -x 'npm run build-css'"
  },
  "keywords": [
    "hapi",
    "tutorial",
    "dealertire"
  ],
  "author": "Sean Grasso",
  "license": "MIT",
  "engines": {
    "node": ">=4.0"
  },
  "dependencies": {
    "boom": "4.2.0",
    "glue": "3.x.x",
    "handlebars": "1.x.x",
    "hapi": "13.x.x",
    "inert": "3.x.x",
    "vision": "4.1.0"
  },
  "devDependencies": {
    "clean-css": "3.4.12",
    "npm-run-all": "2.1.1",
    "uglify-js": "2.6.2"
  }
}
